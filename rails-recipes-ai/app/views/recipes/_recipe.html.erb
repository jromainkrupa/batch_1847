<div id="<%= dom_id recipe %>">
  <% if recipe.photo.attached? %>
    <%= image_tag recipe.photo, alt: "AI-generated image of the recipe" %>
  <% end %>

  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Ingredients:</strong>
    <%= recipe.ingredients %>
  </p>

  <p>
    <%= recipe.content %>
  </p>
</div>
